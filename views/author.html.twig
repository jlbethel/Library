<html>
<head>
    <title>Library</title>

<body>
    <h1>{{ author.getAuthorName }}</h1>
    <h3>Books by Author</h3>
    {% if books is not empty %}
        <p>Here are the books for this author:</p>
        <ul>
            {% for book in books %}
                    <li>{{ book.gettitle }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            There are currently no books for this author.
        </p>
    {% endif %}

    <h4>Add a book to this author:</h4>

    <form action='/add_book' method='post'>
        <input id="author_id" name="author_id" type="hidden" value="{{ author.getId }}">
        <label for="book_id">Select a book</label>
        <select id='book_id' name='book_id' type='text'>
          {% for book in all_books %}
            <option value="{{ book.getId }}"> {{ book.gettitle }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add book</button>
    </form>


    <p><a href='/'>Home</a></p>
</body>
</html>
